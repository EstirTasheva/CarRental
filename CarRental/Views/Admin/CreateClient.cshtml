@using CarRental.Models.ViewModels
@model CreateClientViewModel

@{
	ViewData["Title"] = "Добавяне на клиент";
}

<h2 class="mb-3 pink-title">Добавяне на клиент</h2>

<form asp-action="CreateClient" method="post" class="card card-body filter-card">
	<div class="row g-3">
		<div class="col-md-4">
			<label asp-for="FirstName" class="form-label pink-label"></label>
			<input asp-for="FirstName" class="form-control pink-input" />
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>

		<div class="col-md-4">
			<label asp-for="LastName" class="form-label pink-label"></label>
			<input asp-for="LastName" class="form-control pink-input" />
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>

		<div class="col-md-4">
			<label asp-for="Email" class="form-label pink-label"></label>
			<input asp-for="Email" class="form-control pink-input" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="col-md-4">
			<label asp-for="Password" class="form-label pink-label"></label>
			<input asp-for="Password" type="password" class="form-control pink-input" />
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>

		<div class="col-md-4">
			<label asp-for="ConfirmPassword" class="form-label pink-label"></label>
			<input asp-for="ConfirmPassword" type="password" class="form-control pink-input" />
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="mt-2 d-flex justify-content-end gap-2">
		<a asp-action="Clients" class="btn btn-outline-secondary">Назад</a>
		<button type="submit" name="submit" value="save" class="btn btn-baby-green">Запази</button>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

