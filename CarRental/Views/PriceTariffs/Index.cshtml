@using CarRental.Helpers
@model IEnumerable<PriceTariff>

@{
	ViewData["Title"] = "Ценови тарифи";
}

<h2 class="pink-title mb-3">Ценови тарифи</h2>

<div class="row">
	@if (TempData["Error"] != null)
	{
		<div class="alert alert-warning">@TempData["Error"]</div>
	}
	<div class="col-md-7">
		<div class="table-responsive d-flex justify-content-center">
			<table class="table table-striped align-middle">
				<thead>
					<tr>
						<th>Тип автомобил</th>
						<th>Цена / ден</th>
						@if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
						{
							<th class="text-end">Действия</th>
						}
					</tr>
				</thead>
				<tbody>
					@foreach (PriceTariff tariff in Model)
					{
						<tr>
							<td>@tariff.CarType.GetDisplayName()</td>
							<td>@tariff.PricePerDay.ToString("0.00") €</td>
							@if (User.IsInRole("Administrator") || User.IsInRole("Employee"))
							{
								<td class="text-end">
									<a asp-controller="PriceTariffs" asp-action="Edit" asp-route-id="@tariff.Id" class="btn btn-baby-yellow">Редактирай</a>
								</td>
							}
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="col-md-5">
		<div class="card filter-card"> 
			<div class="card-body card-color">
				<h5 class="card-title">Типове автомобили</h5>
				<p class="text-muted small">
					Всеки тип автомобил има собствена ценова тарифа.
				</p>

				<ul class="list-unstyled mb-0" style="line-height:2;">
					<li><strong>Седан</strong> – удобен за градско шофиране и дълги пътувания</li>
					<li><strong>SUV</strong> – по-висок клас, подходящ за всякакви терени и пътувания</li>
					<li><strong>Ван</strong> – идеален за големи групи от хора и повече багаж</li>
					<li><strong>Хечбек</strong> – компактен и икономичен, удобен за градска среда</li>
					<li><strong>Купе</strong> – спортен и стилен автомобил, предлага пълен конфорт</li>
					<li><strong>Кабриолет</strong> – открит автомобил, създаден за удоволствие</li>
					<li><strong>Пикап</strong> – практичен автомобил, подходящ за товар и работа</li>
					<li><strong>Комби</strong> – повече пространство за багаж, подходящ за семейства</li>
				</ul>
			</div>
		</div>
	</div>
</div>