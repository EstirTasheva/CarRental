@page
@model LoginModel

@{
	ViewData["Title"] = "Вече сте потребител?";
}

<div class="row d-flex justify-content-center">
	<div class="col-md-4">
		<h1 class="pink-title text-center">@ViewData["Title"]</h1>
		<section>
			<form id="account" method="post" >
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control pink-input" autocomplete="username" aria-required="true" placeholder="Имейл" />
					<label asp-for="Input.Email" class="form-label">Имейл</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Password" class="form-control pink-input" autocomplete="current-password" aria-required="true" placeholder="Парола" />
					<label asp-for="Input.Password" class="form-label">Парола</label>
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="checkbox mb-3">
					<label asp-for="Input.RememberMe" class="form-label">
						<input class="form-check-input" asp-for="Input.RememberMe" />
						@Html.DisplayNameFor(m => m.Input.RememberMe)
					</label>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-pink">Влез</button>
				</div>
				<div class="mt-2 text-center">
					<p>
						<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: black;">Нямаш профил? Регистрирай се като нов потребител</a>
					</p>
				</div>
			</form>
		</section>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
